<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <form class="well bs-component" {{action "connect" on="submit"}}>
            <fieldset>
                <legend>
                    JOIN CONVERSATION
                </legend>
                <div class="form-group">
                    <label class="control-label">Server Address</label>
                    {{input-address type='text' class='form-control' value=joinAddress}}
                </div>
                <div class="form-group">
                    <label class="control-label">Server Port</label>
                    {{input-port type='text' class='form-control' value=joinPort}}
                </div>
                <div class="form-group">
                    <input type="submit" class="hidden" value="JOIN"/>
                    <button class="btn btn-success btn-block" {{action "connect"}}><span class="glyphicon glyphicon-phone-alt"></span> JOIN</button>
                    <button class="btn btn-default btn-block" {{action "choose"}}>CANCEL</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
