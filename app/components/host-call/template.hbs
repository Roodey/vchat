<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <form class="well bs-component" {{action "host" on="submit"}}>
            <fieldset>
                <legend>
                    HOST CONVERSATION
                </legend>
                <div class="form-group">
                    <label class="control-label">Listen on Port</label>
                    {{input-port type='text' class='form-control' value=hostPort}}
                </div>
                <div class="form-group">
                    <input type="submit" class="hidden" value="HOST"/>
                    <button class="btn btn-primary btn-block" {{action "host"}}><span class="glyphicon glyphicon-home"></span> HOST</button>
                    <button class="btn btn-default btn-block" {{action "choose"}}>CANCEL</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
