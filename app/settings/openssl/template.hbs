<div class="panel panel-default">
    <div class="panel-heading">
        Open SSL Binary 
        <button class="btn btn-sm btn-default" title="Information" {{action 'info'}}>
            <i class="glyphicon glyphicon-question-sign"></i>
        </button>
        <button class="btn btn-sm btn-default pull-right" title="Reset Server List to Defaults" {{action 'resetPath'}}>
            <i class="glyphicon glyphicon-retweet"></i>
        </button>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-12">
                {{file-chooser value=model change='setPath'}}
            </div>
        </div>
    </div>
</div>
{{outlet}}
